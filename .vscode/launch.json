    "version": "0.2.0",
    "configurations": [
      {
        "name": "Run unit tests",
        "request": "launch",
        "env": {
          "NODE_OPTIONS":"--experimental-vm-modules"
        },
        "runtimeArgs": [
          "./node_modules/.bin/jest",
          "--runInBand",
        ],
        "skipFiles": [
          "<node_internals>/**"
        ],
        "type": "node",
        "outputCapture": "std"
      },
    ]
}
